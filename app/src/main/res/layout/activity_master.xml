<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_master"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.nd.raisethebar.MasterActivity"
    android:background="@android:color/background_light">

    <TextView
        android:text="Form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textForm"
        android:textSize="36sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:foregroundGravity="center_vertical" />

    <TextView
        android:text="m/s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textStaticUnits"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/textMaxSpeed"
        android:layout_alignBottom="@+id/textMaxSpeed"
        android:layout_toEndOf="@+id/textMaxSpeed"
        android:layout_marginStart="17dp" />

    <TextView
        android:text="seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/textStaticSec"
        android:layout_below="@+id/graph" />

    <TextView
        android:text="Maximum speed:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textStaticSpeed"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_above="@+id/textMaxSpeed"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:foregroundGravity="center_vertical" />

    <TextView
        android:text="Weight:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textStaticFor"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:gravity="center"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:text="lbs."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textStaticPounds"
        android:textSize="30sp"
        android:layout_alignTop="@+id/textWeight"
        android:layout_toEndOf="@+id/textWeight"
        android:layout_marginStart="18dp"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textWeight"
        android:textSize="36sp"
        android:layout_alignTop="@+id/textStaticFor"
        android:layout_alignEnd="@+id/textStaticSpeed"
        android:layout_toEndOf="@+id/textStaticFor"
        android:layout_alignStart="@+id/textForm"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@android:color/darker_gray" />

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/graph"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMaxSpeed"
        android:textSize="36sp"
        android:foregroundGravity="center_vertical"
        android:textColor="@android:color/darker_gray"
        android:layout_above="@+id/textForm"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <TextView
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textNumberReps"
        android:textSize="36sp"
        android:numeric="integer|signed"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_centerInParent="false"
        android:foregroundGravity="center_vertical"
        android:textColor="@android:color/darker_gray"
        android:layout_above="@+id/textStaticSpeed"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Number of reps:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textRepsStatic"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:layout_below="@+id/textWeight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />


</RelativeLayout>
